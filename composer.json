{
    "name": "johnbillion/wp-hooks",
    "description": "WordPress actions and filters in machine-readable JSON format.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "John Blackbourn",
            "homepage": "https://johnblackbourn.com/"
        }
    ],
	"config": {
		"sort-packages": true
	},
    "scripts": {
        "generate": "@php -f src/generate.php",
        "validate-schema": "@php -f src/validate.php"
    },
    "scripts-descriptions": {
        "generate": "Generates the hook files",
        "validate-schema": "Validates the generated hook files against the schema"
    },
    "require-dev": {
        "php": ">=7",
        "oomphinc/composer-installers-extender": "^1.1",
        "opis/json-schema": "^1",
        "roots/wordpress": "dev-nightly",
        "wordpress/phpdoc-parser": "dev-master"
    },
    "minimum-stability": "dev",
	"extra": {
        "wordpress-install-dir": "vendor/wordpress/wordpress",
        "installer-paths": {
            "vendor/wordpress/{$name}/": [
                "wordpress/phpdoc-parser"
            ]
        }
	}
}
